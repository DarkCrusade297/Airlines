
@{
    ViewBag.Title = "Search";
}

<h2>Поиск авиабилетов </h2>
<hr>
<h3>Заполните форму ниже, чтобы найти билеты:</h3>
<form>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="from">Откуда</label>
                <input type="text" class="form-control" id="from" aria-describedby="emailHelp" placeholder="Введите город вылета">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="to">Куда</label>
                <input type="password" class="form-control" id="to" placeholder="Введите город прибытия">
            </div>
        </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
</form>



